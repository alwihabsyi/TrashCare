<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.commerce.CheckoutFragment">

    <LinearLayout
        android:id="@+id/appBarContainer"
        android:layout_width="match_parent"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_appbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="75dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back_ios" />

        <TextView
            android:id="@+id/tv_articles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:layout_weight="1"
            android:fontFamily="@font/plusjakartasans_bold"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/appBarContainer"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Pesanan"
                android:layout_weight="1"
                android:fontFamily="@font/plusjakartasans_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                tools:itemCount="5"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Pemesan"
                android:layout_weight="1"
                android:fontFamily="@font/plusjakartasans_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textAlignment="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth=".5dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cursorVisible="false"
                    android:fontFamily="@font/plusjakartasans"
                    android:textSize="14sp"
                    android:hint="Name Of User"
                    android:inputType="text"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@null" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                app:strokeColor="@color/softGreen"
                android:layout_gravity="center"
                app:strokeWidth=".5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spin_address"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/style_spinner_input"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                app:strokeColor="@color/softGreen"
                android:layout_gravity="center"
                app:strokeWidth=".5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spin_order_method"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/style_spinner_input"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                app:strokeColor="@color/softGreen"
                android:layout_gravity="center"
                app:strokeWidth=".5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="16dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spin_shipping_method"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/style_spinner_input"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.card.MaterialCardView>




